- model_class = Tournament
.page-header
  %h1= t '.title', :default => Tournament
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th= model_class.human_attribute_name(:open)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @tournaments.each do |tournament|
      %tr
        %td= tournament.id
        %td= tournament.open
        %td= l tournament.created_at, format: :long
        %td
          = link_to tournament_path(tournament), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do
            = glyph 'info-sign'
            = glyph 'pencil'
          = link_to tournament_path(tournament), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do
            = glyph 'remove'
= form_for @tournament, :html => { :class => 'form-horizontal form-model' } do |f|
  = f.submit nil, :class => 'btn btn-primary'
