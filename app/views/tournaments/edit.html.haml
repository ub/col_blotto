- model_class = Tournament
.page-header
  %h1= t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => Tournament

%table.table.table-striped
  %thead
    %tr
      %th.col-xs-1= t '.number', :default => ['#']
      %th= model_class.human_attribute_name(:nick)
      %th= model_class.human_attribute_name(:r1)
      %th= model_class.human_attribute_name(:r2)
      %th= model_class.human_attribute_name(:r3)
      %th= model_class.human_attribute_name(:r4)
      %th= model_class.human_attribute_name(:r5)
      %th= model_class.human_attribute_name(:r6)
      %th= model_class.human_attribute_name(:created_at)
  %tbody
    - @tournament.entries.each_with_index do |entry, i|
      %tr
        %td= "%2d." % (i+1)
        %td= entry.nick
        - 6.times do
          %td  **
        %td= l entry.created_at, format: :long

%h2= t '.enter', :default => [:'helpers.titles.enter', 'New %{model}'], :model => Entry

= render :partial => 'entries/form'
= form_for @tournament, :html => { :class => 'form-horizontal form-model' } do |f|
  = f.submit t('.finish'), :class => 'btn btn-danger btn-lg'
