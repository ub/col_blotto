- model_class = Tournament
.page-header
  %h1= t '.title', :default => Tournament
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:open)
    %dd
      %pre.prettyprint= @tournament.open
.form-group
  = link_to t('.back', :default => t("helpers.links.back")), |
    tournaments_path, :class => 'btn btn-default'            |
  = link_to t('.edit', :default => t("helpers.links.edit")),       |
    edit_tournament_path(@tournament), :class => 'btn btn-default' |
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    tournament_path(@tournament),                                                                                |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
